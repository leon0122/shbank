<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<property name="LOG_HOME" value="/app/hjpayment/logs" />
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</Pattern>
		</layout>
	</appender>

	<appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${LOG_HOME}/payment-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<maxHistory>30</maxHistory>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches 10MB-->
				<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>%date %level [%thread] %logger{36} [%file : %line] %msg%n
			</pattern>
		</encoder>
	</appender>
	

    
    <appender name="CHECKACCT" class="ch.qos.logback.core.rolling.RollingFileAppender">  
        <Encoding>UTF-8</Encoding>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/checkAcct/checkAcct.log.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%date %level [%file : %line] %msg%n</pattern>
		</encoder>  
    </appender>  
    
    <appender name="CHECKACCTFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">  
        <Encoding>UTF-8</Encoding>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/checkAcctFile/checkAcctFile.log.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%date %level [%file : %line] %msg%n</pattern>
		</encoder>  
    </appender>
	
    <appender name="GENB2AFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">  
        <Encoding>UTF-8</Encoding>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/genb2afile/genb2afile.log.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%date %level [%file : %line] %msg%n</pattern>
		</encoder>  
    </appender>
    
    <appender name="CHECKFILETASK" class="ch.qos.logback.core.rolling.RollingFileAppender">  
        <Encoding>UTF-8</Encoding>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/checkFileTask/checkFileTask.log.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%date %level [%file : %line] %msg%n</pattern>
		</encoder>  
    </appender>
    
	<logger name="java.sql.ResultSet" level="INFO" />
	<logger name="java.sql.Connection" level="INFO" />
	<logger name="com.ibatis.common.jdbc.ScriptRunner" level="INFO" />
	<logger name="com.ibatis" level="INFO" />
	<logger name="java.sql.PreparedStatement" level="INFO" />
	<logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" level="INFO" />
	<logger name="java.sql.Statement" level="INFO" />
	<logger name="com.ibatis.common.jdbc.SimpleDataSource" level="INFO" />


	<logger name="com.huifu.schedure.CheckAccountSchedure" level="INFO" additivity="false">
		<appender-ref ref="CHECKACCT" />
		<appender-ref ref="STDOUT" />
	</logger>


	<logger name="com.huifu.schedure.CheckAcctFileDownSchedure" level="INFO" additivity="false">
		<appender-ref ref="CHECKACCTFILE" />
		<appender-ref ref="STDOUT" />
	</logger>
	
	<logger name="com.huifu.schedure.CheckFileTaskSchedure" level="INFO" additivity="false">
		<appender-ref ref="CHECKFILETASK" />
		<appender-ref ref="STDOUT" />
	</logger>

	<logger name="com.huifu.schedure.GenB2aFileSchedure" level="INFO" additivity="false">
		<appender-ref ref="GENB2AFILE" />
		<appender-ref ref="STDOUT" />
	</logger>

	<root level="INFO">
 		<appender-ref ref="STDOUT" />
		<appender-ref ref="ROLLING" /> 
	</root>
	
</configuration>