<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	 <context:annotation-config/>
	
    <!-- spring 读取配置文件 -->
	<bean id="propertyConfigurer" 
		  class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		  
		<property name="locations">
			<list>
				<value>classpath:${druid.properties}</value>
			</list>
		</property>
	</bean>
	<import resource="spring/applicationContext-dataSource.xml"/>  
    
	<bean id ="remoteConfig" class="com.huifu.utils.RemoteConfig" init-method="init">
		<property name="configLocation" value="classpath:${config.properties}"/>
	</bean>
	
	<bean class="com.huifu.utils.SpringContextUtil" scope="singleton" />
</beans>